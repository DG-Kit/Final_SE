@model IEnumerable<FinalProject.Models.Accountant>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <h2>
        Accountants
    </h2>
    <table class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AccountantName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccountantEmail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccountantPassword)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Warehouse.WarehouseName)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountantName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountantEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountantPassword)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Warehouse.WarehouseName)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id=item.AccountantID })" class="btn btn-outline-info">Edit</a>
                        <a href="@Url.Action("Details", new { id=item.AccountantID })" class="btn btn-outline-info">Details</a>
                        <a href="@Url.Action("Delete", new { id=item.AccountantID })" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
